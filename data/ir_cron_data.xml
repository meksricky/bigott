<?xml version="1.0" encoding="utf-8"?>
<odoo>
      
    <!-- data/ir_cron_data.xml -->
    <data noupdate="1">
        
        <!-- Automated ML Model Training -->
        <record id="cron_ml_auto_training" model="ir.cron">
            <field name="name">ML Model Auto-Training</field>
            <field name="model_id" ref="model_ml_recommendation_engine"/>
            <field name="state">code</field>
            <field name="code">model.cron_auto_train_models()</field>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="False"/>
            <field name="doall" eval="False"/>
        </record>
        
        <!-- Clean Old Learning Data -->
        <record id="cron_clean_learning_data" model="ir.cron">
            <field name="name">Clean Old ML Learning Data</field>
            <field name="model_id" ref="model_ml_recommendation_engine"/>
            <field name="state">code</field>
            <field name="code">model.cron_clean_old_learning_data()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>
        
        <!-- Performance Analytics -->
        <record id="cron_performance_analytics" model="ir.cron">
            <field name="name">ML Performance Analytics</field>
            <field name="model_id" ref="model_integration_manager"/>
            <field name="state">code</field>
            <field name="code">model.cron_analyze_performance()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>
        
    </data>
    
</odoo>
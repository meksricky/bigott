<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Ollama Configuration Parameters -->
        <record id="config_ollama_enabled" model="ir.config_parameter">
            <field name="key">ollama_ai.ollama_enabled</field>
            <field name="value">true</field>
        </record>
        
        <record id="config_ollama_base_url" model="ir.config_parameter">
            <field name="key">ollama_ai.ollama_base_url</field>
            <field name="value">http://localhost:11434</field>
        </record>
        
        <record id="config_ollama_model" model="ir.config_parameter">
            <field name="key">ollama_ai.ollama_model</field>
            <field name="value">llama3.2:3b</field>
        </record>
        
        <record id="config_ollama_timeout" model="ir.config_parameter">
            <field name="key">ollama_ai.ollama_timeout</field>
            <field name="value">30</field>
        </record>
        
        <!-- Default Ollama Recommender -->
        <record id="default_ollama_recommender" model="ollama.gift.recommender">
            <field name="name">Default Ollama Gift Recommender</field>
            <field name="ollama_enabled">True</field>
            <field name="ollama_base_url">http://localhost:11434</field>
            <field name="ollama_model">llama3.2:3b</field>
            <field name="max_products">8</field>
            <field name="budget_flexibility">15.0</field>
            <field name="min_confidence_score">0.6</field>
        </record>
        
    </data>
</odoo>
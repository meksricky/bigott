        <record id="ir_cron_learn_from_sales" model="ir.cron">
            <field name="name">AI: Learn from Sales Patterns</field>
            <field name="model_id" ref="model_recommendation_learning"/>
            <field name="state">code</field>
            <field name="code">model.learn_from_sales()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
       
    <!-- security/security_groups.xml -->
    <data>
        
        <!-- ML/AI Admin Group -->
        <record id="group_ml_admin" model="res.groups">
            <field name="name">ML/AI Administrator</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
        <!-- ML/AI User Group -->
        <record id="group_ml_user" model="res.groups">
            <field name="name">ML/AI User</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>
        
        <!-- ML/AI Analyst Group -->
        <record id="group_ml_analyst" model="res.groups">
            <field name="name">ML/AI Analyst</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('group_ml_user'))]"/>
            <field name="comment">Can view ML analytics and reports but cannot modify models</field>
        </record>
        
    </data>
    
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Gift Composition Access Rules -->
        <record id="gift_composition_rule_user" model="ir.rule">
            <field name="name">Gift Composition: Users can read all compositions</field>
            <field name="model_id" ref="model_gift_composition"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Gift Composition Manager Rules -->
        <record id="gift_composition_rule_manager" model="ir.rule">
            <field name="name">Gift Composition: Managers can manage all compositions</field>
            <field name="model_id" ref="model_gift_composition"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Ollama Recommender Access Rules -->
        <record id="ollama_recommender_rule_user" model="ir.rule">
            <field name="name">Ollama Recommender: Users can read active recommenders</field>
            <field name="model_id" ref="model_ollama_gift_recommender"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_gift_recommender_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Ollama Recommender Manager Rules -->
        <record id="ollama_recommender_rule_manager" model="ir.rule">
            <field name="name">Ollama Recommender: Managers can manage all recommenders</field>
            <field name="model_id" ref="model_ollama_gift_recommender"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_gift_recommender_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Recommendation Wizard Rules -->
        <record id="ollama_wizard_rule_user" model="ir.rule">
            <field name="name">Ollama Wizard: Users can access their own wizards</field>
            <field name="model_id" ref="model_ollama_recommendation_wizard"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
    </data>
</odoo>
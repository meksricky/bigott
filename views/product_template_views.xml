<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Inherit Product Template Form View -->
    <record id="view_product_template_form_inherit_gift" model="ir.ui.view">
        <field name="name">product.template.form.inherit.gift</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="ðŸŽ Gift Information" name="gift_info">
                    <group>
                        <group string="Gift Classification">
                            <field name="gift_suitable"/>
                            <field name="lebiggot_category"/>
                            <field name="product_grade"/>
                            <field name="brand"/>
                        </group>
                        <group string="Budget Range">
                            <field name="min_gift_budget" widget="monetary"/>
                            <field name="max_gift_budget" widget="monetary"/>
                        </group>
                    </group>
                    
                    <group string="Dietary Information">
                        <group>
                            <field name="is_vegan"/>
                            <field name="is_halal"/>
                        </group>
                        <group>
                            <field name="is_gluten_free"/>
                            <field name="contains_alcohol"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
    
    <!-- Product Search View for Gifts -->
    <record id="view_product_template_search_gift" model="ir.ui.view">
        <field name="name">product.template.search.gift</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <search position="inside">
                <filter name="gift_suitable" string="Gift Suitable" domain="[('gift_suitable', '=', True)]"/>
                <filter name="has_internal_ref" string="Has Internal Reference" domain="[('default_code', '!=', False)]"/>
                <filter name="vegan" string="Vegan" domain="[('is_vegan', '=', True)]"/>
                <filter name="halal" string="Halal" domain="[('is_halal', '=', True)]"/>
                <filter name="gluten_free" string="Gluten Free" domain="[('is_gluten_free', '=', True)]"/>
                <filter name="non_alcoholic" string="Non-Alcoholic" domain="[('contains_alcohol', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter name="group_by_gift_category" string="Gift Category" context="{'group_by': 'lebiggot_category'}"/>
                    <filter name="group_by_product_grade" string="Product Grade" context="{'group_by': 'product_grade'}"/>
                    <filter name="group_by_brand" string="Brand" context="{'group_by': 'brand'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
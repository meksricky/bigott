                  sequence="10"/>
        
        <!-- ========== ANALYTICS & REPORTS ========== -->
        <menuitem id="menu_analytics" 
                  name="ðŸ“Š Analytics &amp; Reports" 
                  parent="menu_senor_bigott_main" 
                  sequence="40"/>
        
        <!-- Client Analytics -->
        <menuitem id="menu_client_analytics" 
                  name="Client Analytics" 

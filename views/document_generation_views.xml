<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Generation System Form View -->
    <record id="view_document_generation_system_form" model="ir.ui.view">
        <field name="name">document.generation.system.form</field>
        <field name="model">document.generation.system</field>
        <field name="arch" type="xml">
            <form string="Document Generation System">
                <sheet>
                    <div class="oe_title">
                        <h1>Document Generation System</h1>
                    </div>
                    
                    <group>
                        <group string="Template Settings">
                            <field name="default_template"/>
                            <field name="generate_pdf"/>
                            <field name="generate_excel"/>
                        </group>
                        <group string="Email Settings">
                            <field name="auto_send_email"/>
                            <field name="email_template_id" attrs="{'invisible': [('auto_send_email', '=', False)]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_document_generation_system" model="ir.actions.act_window">
        <field name="name">Document Generation</field>
        <field name="res_model">document.generation.system</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
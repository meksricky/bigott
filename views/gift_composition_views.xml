<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Gift Composition Tree View -->
    <record id="view_gift_composition_tree" model="ir.ui.view">
        <field name="name">gift.composition.tree</field>
        <field name="model">gift.composition</field>
        <field name="arch" type="xml">
            <tree string="Gift Compositions" decoration-success="state == 'delivered'" decoration-info="state == 'approved'" decoration-warning="state == 'confirmed'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="composition_type"/>
                <field name="product_count"/>
                <field name="target_budget" widget="monetary"/>
                <field name="actual_cost" widget="monetary"/>
                <field name="budget_variance" widget="percentage"/>
                <field name="confidence_score" widget="progressbar"/>
                <field name="state" widget="badge" decoration-success="state == 'delivered'" decoration-info="state == 'approved'" decoration-warning="state == 'confirmed'"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>
    
    <!-- Gift Composition Form View -->
    <record id="view_gift_composition_form" model="ir.ui.view">
        <field name="name">gift.composition.form</field>
        <field name="model">gift.composition</field>
        <field name="arch" type="xml">
            <form string="Gift Composition">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_deliver" string="Mark as Delivered" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'approved')]}"/>
                    <button name="action_cancel" string="Cancel" type="object" attrs="{'invisible': [('state', 'in', ['delivered', 'cancelled'])]}"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved,delivered"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Client Information">
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="target_year"/>
                            <field name="composition_type"/>
                        </group>
                        <group string="Budget Analysis">
                            <field name="target_budget" widget="monetary"/>
                            <field name="actual_cost" widget="monetary"/>
                            <field name="budget_variance" widget="percentage"/>
                            <field name="product_count"/>
                        </group>
                    </group>
                    
                    <group string="AI Analysis" attrs="{'invisible': [('composition_type', '!=', 'ai_generated')]}">
                        <group>
                            <field name="confidence_score" widget="progressbar"/>
                            <field name="novelty_score" widget="progressbar"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Products" name="products">
                            <field name="product_ids">
                                <tree>
                                    <field name="default_code"/>
                                    <field name="name"/>
                                    <field name="lebiggot_category"/>
                                    <field name="product_grade"/>
                                    <field name="brand"/>
                                    <field name="list_price" widget="monetary"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Client Notes &amp; Restrictions" name="notes">
                            <group>
                                <field name="dietary_restrictions" colspan="2"/>
                                <field name="client_notes" colspan="2"/>
                            </group>
                        </page>
                        
                        <page string="AI Reasoning" name="reasoning" attrs="{'invisible': [('reasoning', '=', False)]}">
                            <field name="reasoning" widget="html"/>
                        </page>
                        
                        <page string="Timeline" name="timeline">
                            <group>
                                <group string="Dates">
                                    <field name="create_date" readonly="1"/>
                                    <field name="confirmation_date" readonly="1"/>
                                    <field name="delivery_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- REMOVED MAIL CHATTER TEMPORARILY -->
                <!-- Will add back after module is installed -->
                
            </form>
        </field>
    </record>
    
    <!-- Gift Composition Search View -->
    <record id="view_gift_composition_search" model="ir.ui.view">
        <field name="name">gift.composition.search</field>
        <field name="model">gift.composition</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="composition_type"/>
                
                <filter name="this_year" string="This Year" domain="[('target_year', '=', context_today().year)]"/>
                <filter name="ai_generated" string="AI Generated" domain="[('composition_type', '=', 'ai_generated')]"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="approved" string="Approved" domain="[('state', '=', 'approved')]"/>
                <filter name="delivered" string="Delivered" domain="[('state', '=', 'delivered')]"/>
                
                <group expand="0" string="Group By">
                    <filter name="group_by_partner" string="Client" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_type" string="Composition Type" context="{'group_by': 'composition_type'}"/>
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_by_year" string="Year" context="{'group_by': 'target_year'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Window Action -->
    <record id="action_gift_composition" model="ir.actions.act_window">
        <field name="name">Gift Compositions</field>
        <field name="res_model">gift.composition</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">üéÅ No gift compositions yet!</p>
            <p>
                Gift compositions will appear here. You can create them manually or use the AI recommendation system.
            </p>
        </field>
    </record>

    <!-- Action to open gift compositions -->
    <record id="action_gift_composition" model="ir.actions.act_window">
        <field name="name">Gift Compositions</field>
        <field name="res_model">gift.composition</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No gift compositions yet!
            </p>
        </field>
    </record>

    <record id="action_gift_composition" model="ir.actions.act_window">
        <field name="name">Gift Compositions</field>
        <field name="res_model">gift.composition</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No gift compositions yet!
            </p>
            <p>
                Click "Create" to add a new gift composition or generate one using AI.
            </p>
        </field>
    </record>

    <!-- Menu item under Sales -->
    <menuitem id="menu_gift_composition"
            name="Gift Compositions"
            parent="sale.sale_menu_root"
            action="action_gift_composition"
            sequence="10"/>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_simple_wizard_form" model="ir.ui.view">
        <field name="name">simple.wizard.form</field>
        <field name="model">simple.recommendation.wizard</field>
        <field name="arch" type="xml">
            <form string="Test Wizard">
                <sheet>
                    <group>
                        <field name="partner_id" required="1"/>
                        <field name="target_budget"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_generate" string="Test" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_simple_wizard" model="ir.actions.act_window">
        <field name="name">Test Wizard</field>
        <field name="res_model">simple.recommendation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <menuitem id="menu_test_wizard" 
              name="Test Wizard" 
              parent="menu_ollama_gift_root" 
              action="action_simple_wizard" 
              sequence="99"/>
</odoo>
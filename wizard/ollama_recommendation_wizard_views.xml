<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ollama_recommendation_wizard_form" model="ir.ui.view">
        <field name="name">ollama.recommendation.wizard.form</field>
        <field name="model">ollama.recommendation.wizard</field>
        <field name="arch" type="xml">
            <form string="Gift Recommendation Wizard">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generating,done,error"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_test_connection" type="object" string="Test Ollama" class="oe_stat_button" icon="fa-plug"/>
                    </div>
                    
                    <div class="oe_title">
                        <h1>Gift Composition Generator</h1>
                    </div>
                    
                    <!-- Ollama Status Display -->
                    <group col="1" attrs="{'invisible': [('ollama_status', '=', False)]}">
                        <field name="ollama_status" nolabel="1"/>
                    </group>
                    
                    <notebook>
                        <!-- Tab 1: Configuration -->
                        <page string="Configuration">
                            <group col="4">
                                <!-- Client Section -->
                                <group colspan="2" string="Client Details">
                                    <field name="partner_id" options="{'no_quick_create': True}"/>
                                    <field name="target_year"/>
                                    <field name="expected_strategy" widget="badge" readonly="1" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                                </group>
                                
                                <!-- Budget Section -->
                                <group colspan="2" string="Budget Settings">
                                    <field name="currency_id" invisible="1"/>
                                    <field name="target_budget" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="specify_product_count"/>
                                    <field name="product_count" 
                                           attrs="{'invisible': [('specify_product_count', '=', False)], 
                                                  'required': [('specify_product_count', '=', True)]}"/>
                                </group>
                            </group>
                            
                            <!-- Composition Settings -->
                            <separator string="Composition Settings"/>
                            <group col="4">
                                <group colspan="2">
                                    <field name="engine_type" widget="radio"/>
                                    <field name="composition_type" invisible="1"/>
                                    <field name="composition_display_type" readonly="1"/>
                                </group>
                                
                                <!-- Experience Options -->
                                <group colspan="2" attrs="{'invisible': [('engine_type', '!=', 'experience')]}">
                                    <field name="experience_category_filter"/>
                                    <field name="selected_experience" 
                                           domain="[('is_experience', '=', True)]"
                                           context="{'default_is_experience': True}"
                                           options="{'no_quick_create': True}"/>
                                </group>
                            </group>
                            
                            <!-- Experience Preview -->
                            <group attrs="{'invisible': ['|', ('engine_type', '!=', 'experience'), ('selected_experience', '=', False)]}" col="1">
                                <separator string="Experience Preview"/>
                                <field name="experience_preview" nolabel="1"/>
                            </group>
                            
                            <!-- Dietary Section -->
                            <separator string="Dietary Restrictions"/>
                            <group col="2">
                                <group>
                                    <field name="dietary_restrictions"/>
                                    <field name="dietary_restrictions_text" 
                                           widget="text"
                                           attrs="{'invisible': [('dietary_restrictions', '=', 'none')]}"
                                           placeholder="Enter additional dietary restrictions..."/>
                                </group>
                                <group attrs="{'invisible': [('dietary_restrictions', '!=', 'multiple')]}">
                                    <label string="Individual Restrictions"/>
                                    <div>
                                        <field name="is_halal"/>
                                        <field name="is_vegan"/>
                                        <field name="is_vegetarian"/>
                                        <field name="is_gluten_free"/>
                                        <field name="is_non_alcoholic"/>
                                    </div>
                                </group>
                            </group>
                            
                            <!-- Special Notes -->
                            <separator string="Special Instructions"/>
                            <field name="client_notes" widget="text" nolabel="1"
                                   placeholder="You can specify:&#10;• Budget override&#10;• Exact product count&#10;• Specific categories (e.g. '3 wines, 2 cheeses')&#10;• Exclusions (e.g. 'no chocolate')&#10;• Any other special requirements"/>
                        </page>
                        
                        <!-- Tab 2: Client Analysis -->
                        <page string="Client Analysis" attrs="{'invisible': [('partner_id', '=', False)]}">
                            <group col="1">
                                <field name="client_info" nolabel="1"/>
                                <separator string="Purchase History"/>
                                <field name="client_history_summary" nolabel="1"/>
                            </group>
                            <group col="4" string="Analysis Indicators">
                                <field name="has_previous_orders" readonly="1"/>
                                <field name="has_last_year_data" readonly="1"/>
                                <field name="business_rules_applicable" readonly="1"/>
                                <field name="client_dietary_history" readonly="1"/>
                            </group>
                        </page>
                        
                        <!-- Tab 3: Results -->
                        <page string="Results" attrs="{'invisible': [('state', '=', 'draft')]}">
                            <!-- Success Section -->
                            <group attrs="{'invisible': [('state', '!=', 'done')]}">
                                <field name="result_message" nolabel="1" colspan="2"/>
                                <group col="4">
                                    <field name="composition_id" readonly="1"/>
                                    <field name="total_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="product_count_actual" readonly="1" string="Total Products"/>
                                    <field name="confidence_score" widget="percentage"/>
                                </group>
                                
                                <separator string="Products in Composition"/>
                                <field name="recommended_products" nolabel="1">
                                    <tree create="false" edit="false" delete="false">
                                        <field name="default_code" string="Code" optional="show"/>
                                        <field name="name" string="Product"/>
                                        <field name="categ_id" string="Category"/>
                                        <field name="list_price" string="Price" widget="monetary" sum="Total"/>
                                    </tree>
                                </field>
                            </group>
                            
                            <!-- Error Section -->
                            <group attrs="{'invisible': [('state', '!=', 'error')]}" col="1">
                                <div class="alert alert-danger" role="alert">
                                    <h4 class="alert-heading">Generation Failed</h4>
                                    <field name="error_message" nolabel="1"/>
                                </div>
                            </group>
                        </page>
                    </notebook>
                    
                    <field name="recommender_id" invisible="1"/>
                </sheet>
                
                <footer>
                    <button name="action_generate_recommendation" 
                            type="object" 
                            string="Generate Composition" 
                            class="oe_highlight"
                            states="draft,error"/>
                    
                    <button name="action_view_composition" 
                            type="object" 
                            string="Open Composition" 
                            class="oe_highlight"
                            attrs="{'invisible': [('composition_id', '=', False)]}"/>
                    
                    <button name="action_generate_another" 
                            type="object" 
                            string="Generate Another" 
                            states="done"/>
                    
                    <button string="Close" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_ollama_recommendation_wizard" model="ir.actions.act_window">
        <field name="name">Gift Recommendation Wizard</field>
        <field name="res_model">ollama.recommendation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_ollama_recommendation_wizard_form"/>
    </record>
    
    <menuitem id="menu_ollama_recommendation_wizard" 
              name="Gift Wizard" 
              parent="gift_manager.menu_gift_root"
              action="action_ollama_recommendation_wizard" 
              sequence="1"/>
</odoo>
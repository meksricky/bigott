<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hybrid Ollama Wizard Form View -->
    <record id="view_ollama_recommendation_wizard_form" model="ir.ui.view">
        <field name="name">ollama.recommendation.wizard.form</field>
        <field name="model">ollama.recommendation.wizard</field>
        <field name="arch" type="xml">
            <form string="AI-Powered Gift Recommendation">
                <!-- Hidden fields needed for attrs conditions -->
                <field name="state" invisible="1"/>
                <field name="composition_id" invisible="1"/>
                <field name="use_ollama" invisible="1"/>
                <field name="recommended_products" invisible="1"/>
                
                <sheet>
                    <!-- Header based on state -->
                    <div attrs="{'invisible': [('state', '!=', 'generating')]}" class="alert alert-info">
                        <h4>‚è≥ Generating recommendations...</h4>
                        <p>Please wait while AI analyzes client preferences and creates the perfect gift composition.</p>
                    </div>
                    
                    <div attrs="{'invisible': [('state', '!=', 'done')]}">
                        <field name="result_message" widget="html" nolabel="1"/>
                    </div>
                    
                    <div attrs="{'invisible': [('state', '!=', 'error')]}" class="alert alert-danger">
                        <field name="error_message" nolabel="1"/>
                    </div>
                    
                    <!-- Main Form -->
                    <div class="oe_title">
                        <h1>Generate Gift Recommendation</h1>
                    </div>
                    
                    <group>
                        <group string="Client Information">
                            <field name="partner_id" 
                                   options="{'no_create': True}" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="target_year" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="target_budget" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group string="Configuration">
                            <field name="dietary_restrictions" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="engine_type" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    
                    <group string="Special Requirements">
                        <field name="client_notes" 
                               nolabel="1" 
                               placeholder="Any special preferences, occasion details, or requirements..." 
                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    
                    <!-- Client Intelligence -->
                    <group string="Client Intelligence" 
                           attrs="{'invisible': [('partner_id', '=', False)]}">
                        <field name="client_info" widget="html" nolabel="1"/>
                    </group>
                    
                    <!-- Results Section -->
                    <notebook attrs="{'invisible': [('state', '!=', 'done')]}">
                        <page string="Recommended Products">
                            <field name="recommended_products" mode="tree">
                                <tree>
                                    <field name="name"/>
                                    <field name="default_code"/>
                                    <field name="list_price"/>
                                </tree>
                            </field>
                            <group>
                                <group>
                                    <field name="total_cost"/>
                                </group>
                                <group>
                                    <field name="confidence_score" widget="percentage"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <!-- Draft State Actions -->
                    <button string="Generate Recommendation" 
                            name="action_generate_recommendation" 
                            type="object" 
                            class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    
                    <button string="Test AI Connection" 
                            name="action_test_connection" 
                            type="object" 
                            class="btn-secondary"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    
                    <!-- Done State Actions -->
                    <button string="View Composition" 
                            name="action_view_composition" 
                            type="object" 
                            class="btn-primary"
                            attrs="{'invisible': ['|', ('state', '!=', 'done'), ('composition_id', '=', False)]}"/>
                    
                    <button string="Generate Another" 
                            name="action_generate_another" 
                            type="object" 
                            class="btn-secondary"
                            attrs="{'invisible': [('state', '!=', 'done')]}"/>
                    
                    <!-- Always visible -->
                    <button string="Close" 
                            special="cancel" 
                            class="btn-secondary"
                            attrs="{'invisible': [('state', '=', 'generating')]}"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Main Action -->
    <record id="action_ollama_recommendation_wizard" model="ir.actions.act_window">
        <field name="name">AI Gift Recommendation</field>
        <field name="res_model">ollama.recommendation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_ollama_recommendation_wizard_form"/>
    </record>

    <!-- Action from Partner -->
    <record id="action_ollama_wizard_from_partner" model="ir.actions.act_window">
        <field name="name">Generate AI Gift</field>
        <field name="res_model">ollama.recommendation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_ollama_recommendation_wizard_form"/>
        <field name="context">{'default_partner_id': active_id}</field>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_view_types">form</field>
    </record>

    <!-- Main Menu -->
    <menuitem id="menu_ai_gift_root"
              name="AI Gifts"
              web_icon="senor_bigott_recommender,static/description/icon.png"
              sequence="5"/>
    
    <menuitem id="menu_ai_operations"
              name="Operations"
              parent="menu_ai_gift_root"
              sequence="1"/>
    
    <menuitem id="menu_generate_ai_gift"
              name="Generate AI Gift"
              parent="menu_ai_operations"
              action="action_ollama_recommendation_wizard"
              sequence="1"/>
    
    <!-- Quick Access under Sales -->
    <menuitem id="menu_ai_gift_sales"
              name="AI Gift Generator"
              parent="sale.sale_menu_root"
              action="action_ollama_recommendation_wizard"
              sequence="99"/>

</odoo>
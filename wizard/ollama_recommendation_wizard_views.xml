<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ollama_recommendation_wizard_form" model="ir.ui.view">
        <field name="name">ollama.recommendation.wizard.form</field>
        <field name="model">ollama.recommendation.wizard</field>
        <field name="arch" type="xml">
            <form string="Gift Recommendation Wizard">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generating,done,error"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_test_connection" type="object" string="Test Ollama" class="oe_stat_button" icon="fa-plug"/>
                    </div>
                    
                    <div class="oe_title">
                        <h1>Gift Composition Generator</h1>
                    </div>
                    
                    <!-- Ollama Status Display -->
                    <group col="1" attrs="{'invisible': [('ollama_status', '=', False)]}">
                        <field name="ollama_status" nolabel="1"/>
                    </group>
                    
                    <group col="4">
                        <!-- Client and Budget Section -->
                        <group colspan="2" string="Client Details">
                            <field name="partner_id" options="{'no_quick_create': True}"/>
                            <field name="target_year"/>
                        </group>
                        
                        <group colspan="2" string="Budget Settings">
                            <field name="currency_id" invisible="1"/>
                            <field name="target_budget" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="specify_product_count"/>
                            <field name="product_count" 
                                   attrs="{'invisible': [('specify_product_count', '=', False)], 
                                          'required': [('specify_product_count', '=', True)]}"/>
                        </group>
                    </group>
                    
                    <!-- Client Analysis Section -->
                    <group attrs="{'invisible': [('partner_id', '=', False)]}" string="Client Analysis">
                        <group col="1">
                            <field name="client_info" nolabel="1"/>
                        </group>
                        <group col="1">
                            <field name="client_history_summary" nolabel="1"/>
                        </group>
                        <group col="4">
                            <field name="has_previous_orders" readonly="1"/>
                            <field name="has_last_year_data" readonly="1"/>
                            <field name="business_rules_applicable" readonly="1"/>
                            <field name="expected_strategy" widget="badge"/>
                        </group>
                    </group>
                    
                    <group col="4">
                        <!-- Composition Configuration -->
                        <group colspan="2" string="Composition Type">
                            <field name="engine_type" widget="radio"/>
                            <field name="composition_type" invisible="1"/>
                            <field name="composition_display_type" readonly="1"/>
                        </group>
                        
                        <!-- Experience Selection (when engine_type is experience) -->
                        <group colspan="2" string="Experience Options" 
                               attrs="{'invisible': [('engine_type', '!=', 'experience')]}">
                            <field name="experience_category_filter" string="Category Filter"/>
                            <field name="selected_experience" 
                                   string="Select Experience Product"
                                   domain="[('is_experience', '=', True)]"
                                   options="{'no_quick_create': True}"/>
                        </group>
                    </group>
                    
                    <!-- Experience Preview -->
                    <group attrs="{'invisible': [('selected_experience', '=', False)]}" col="1">
                        <field name="experience_preview" nolabel="1"/>
                    </group>
                    
                    <!-- Dietary Restrictions -->
                    <group string="Dietary Restrictions">
                        <group>
                            <field name="dietary_restrictions"/>
                            <field name="client_dietary_history" readonly="1" 
                                   attrs="{'invisible': [('partner_id', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="dietary_restrictions_text" 
                                   widget="text"
                                   attrs="{'invisible': [('dietary_restrictions', '=', 'none')]}"
                                   placeholder="Additional dietary details..."/>
                        </group>
                    </group>
                    
                    <!-- Individual Dietary Options -->
                    <group attrs="{'invisible': [('dietary_restrictions', '!=', 'multiple')]}" 
                           string="Select Individual Restrictions" col="6">
                        <field name="is_halal" widget="boolean_toggle"/>
                        <field name="is_vegan" widget="boolean_toggle"/>
                        <field name="is_vegetarian" widget="boolean_toggle"/>
                        <field name="is_gluten_free" widget="boolean_toggle"/>
                        <field name="is_non_alcoholic" widget="boolean_toggle"/>
                    </group>
                    
                    <!-- Client Notes -->
                    <separator string="Special Requirements and Notes"/>
                    <field name="client_notes" widget="text" nolabel="1"/>
                    
                    <!-- Generation Results -->
                    <group attrs="{'invisible': [('state', '=', 'draft')]}" string="Results">
                        <!-- Success Message -->
                        <group attrs="{'invisible': [('state', '!=', 'done')]}" col="1">
                            <field name="result_message" nolabel="1" readonly="1"/>
                            
                            <group col="4">
                                <field name="composition_id" readonly="1" string="Composition ID"/>
                                <field name="total_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="product_count_actual" readonly="1" string="Products Count"/>
                                <field name="confidence_score" widget="percentage" string="Match Score"/>
                            </group>
                        </group>
                        
                        <!-- Products Table -->
                        <separator string="Recommended Products" 
                                  attrs="{'invisible': [('recommended_products', '=', [])]}"/>
                        <field name="recommended_products" nolabel="1" 
                               attrs="{'invisible': [('recommended_products', '=', [])]}">
                            <tree create="false" edit="false" delete="false">
                                <field name="default_code" optional="show"/>
                                <field name="name"/>
                                <field name="categ_id" optional="show"/>
                                <field name="list_price" widget="monetary" sum="Total Value"/>
                            </tree>
                        </field>
                        
                        <!-- Error Message -->
                        <group attrs="{'invisible': [('state', '!=', 'error')]}" col="1">
                            <div class="alert alert-danger">
                                <field name="error_message" nolabel="1" readonly="1"/>
                            </div>
                        </group>
                    </group>
                    
                    <!-- Hidden Fields -->
                    <field name="recommender_id" invisible="1"/>
                </sheet>
                
                <footer>
                    <!-- Primary Actions -->
                    <button name="action_generate_recommendation" 
                            type="object" 
                            string="Generate Composition" 
                            class="oe_highlight"
                            states="draft,error"/>
                    
                    <button name="action_generate_recommendation" 
                            type="object" 
                            string="Regenerate" 
                            class="oe_highlight"
                            states="done"
                            confirm="This will create a new composition. Continue?"/>
                    
                    <!-- After Generation Actions -->
                    <button name="action_view_composition" 
                            type="object" 
                            string="Open Composition" 
                            class="oe_highlight"
                            attrs="{'invisible': [('composition_id', '=', False)]}"/>
                    
                    <button name="action_generate_another" 
                            type="object" 
                            string="New Generation" 
                            states="done"/>
                    
                    <button string="Close" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_ollama_recommendation_wizard" model="ir.actions.act_window">
        <field name="name">Gift Recommendation Wizard</field>
        <field name="res_model">ollama.recommendation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <menuitem id="menu_ollama_recommendation_wizard" 
              name="Gift Wizard" 
              parent="gift_manager.menu_gift_root"
              action="action_ollama_recommendation_wizard" 
              sequence="1"/>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_ollama_recommendation_wizard_form" model="ir.ui.view">
        <field name="name">ollama.recommendation.wizard.form</field>
        <field name="model">ollama.recommendation.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Gift Recommendation">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generating,done,error"/>
                </header>

                <sheet>
                    <!-- Input Section -->
                    <div attrs="{'invisible': [('state', 'in', ['done','error','generating'])]}">
                        <div class="oe_title">
                            <h1>ðŸ¤– AI-Powered Gift Recommendation</h1>
                            <p>Generate personalized luxury gift recommendations using Ollama AI</p>
                        </div>

                        <group>
                            <group string="Client Information">
                                <field name="partner_id" 
                                       placeholder="Select client..."
                                       domain="[('is_company', '=', False)]"
                                       options="{'no_create': True}"/>
                                <field name="target_budget" widget="monetary"/>
                            </group>
                            <group string="AI Configuration">
                                <field name="recommender_id" options="{'no_create': True}"/>
                            </group>
                        </group>

                        <group string="Dietary Restrictions">
                            <group>
                                <field name="is_vegan"/>
                                <field name="is_halal"/>
                            </group>
                            <group>
                                <field name="is_gluten_free"/>
                                <field name="is_non_alcoholic"/>
                            </group>
                            <field name="dietary_restrictions" colspan="2"
                                   placeholder="Enter additional restrictions separated by commas"/>
                        </group>

                        <group string="Additional Information">
                            <field name="client_notes" colspan="2"
                                   placeholder="Special requests, occasion details, preferences, etc."/>
                        </group>
                    </div>

                    <!-- Generating State -->
                    <div class="text-center" attrs="{'invisible': [('state', '!=', 'generating')]}">
                        <div class="fa fa-3x fa-spin fa-spinner text-muted">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <h3>Generating AI Recommendation...</h3>
                        <p>Please wait while Ollama analyzes the client data and generates recommendations.</p>
                    </div>

                    <!-- Results Section -->
                    <div attrs="{'invisible': [('state', '!=', 'done')]}">
                        <div class="oe_title">
                            <h1>âœ… Recommendation Generated Successfully</h1>
                        </div>

                        <div class="alert alert-success" role="alert"
                             attrs="{'invisible': [('result_message', '=', False)]}">
                            <strong>Success:</strong> <field name="result_message" readonly="1"/>
                        </div>

                        <group>
                            <group string="Summary">
                                <field name="total_cost" readonly="1" widget="monetary"/>
                                <field name="confidence_score" widget="progressbar" readonly="1"/>
                                <field name="composition_id" readonly="1"/>
                            </group>
                            <group string="Client">
                                <field name="partner_id" readonly="1"/>
                                <field name="target_budget" readonly="1" widget="monetary"/>
                            </group>
                        </group>

                        <group string="ðŸ“¦ Recommended Products">
                            <field name="recommended_products" readonly="1" nolabel="1">
                                <tree>
                                    <field name="default_code"/>
                                    <field name="name"/>
                                    <field name="list_price"/>
                                </tree>
                            </field>
                        </group>
                    </div>

                    <!-- Error Section -->
                    <div class="alert alert-danger" role="alert" attrs="{'invisible': [('state', '!=', 'error')]}">
                        <strong>Error:</strong> <field name="error_message" readonly="1"/>
                    </div>
                </sheet>

                <footer>
                    <button name="action_generate_recommendation"
                            string="ðŸŽ Generate Recommendation"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('state', 'in', ['generating','done'])]}"/>

                    <button name="action_test_recommender_connection"
                            string="ðŸ”— Test Connection"
                            type="object"
                            class="btn-secondary"
                            attrs="{'invisible': [('state', 'in', ['generating','done'])]}"/>

                    <button name="action_view_composition"
                            string="ðŸ“‹ View Composition"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'done')]}"/>

                    <button name="action_generate_another"
                            string="ðŸ”„ Generate Another"
                            type="object"
                            class="btn-secondary"
                            attrs="{'invisible': [('state', '!=', 'done')]}"/>

                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_ollama_recommendation_wizard" model="ir.actions.act_window">
        <field name="name">Generate Gift Recommendation</field>
        <field name="res_model">ollama.recommendation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_partner_form_ollama_direct_button" model="ir.ui.view">
        <field name="name">res.partner.form.ollama.direct.button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" 
                        type="object" 
                        name="action_generate_ollama_recommendation"
                        icon="fa-magic"
                        attrs="{'invisible': [('is_company', '=', True)]}">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Quick AI</span>
                        <span class="o_stat_text">Recommendation</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <record id="action_server_ollama_recommendation" model="ir.actions.server">
        <field name="name">Generate Ollama Recommendation</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code">
    if records:
        for record in records:
            if not record.is_company:
                action = record.action_generate_ollama_recommendation()
            else:
                raise UserError("Please select an individual client, not a company.")
        </field>
    </record>
</odoo>
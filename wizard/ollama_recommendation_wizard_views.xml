<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Wizard View -->
    <record id="view_ollama_recommendation_wizard_form" model="ir.ui.view">
        <field name="name">ollama.recommendation.wizard.form</field>
        <field name="model">ollama.recommendation.wizard</field>
        <field name="arch" type="xml">
            <form string="Gift Recommendation Wizard">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generating,done,error"/>
                </header>
                
                <sheet>
                    <group name="main_group">
                        <!-- Client Section -->
                        <group string="Client Information" col="2">
                            <group>
                                <field name="partner_id" options="{'no_create': True}"/>
                                <field name="target_year"/>
                            </group>
                            <group>
                                <field name="expected_strategy" readonly="1" attrs="{'invisible': [('partner_id', '=', False)]}"/>
                            </group>
                        </group>
                        
                        <!-- Client History Display -->
                        <group attrs="{'invisible': [('partner_id', '=', False)]}" col="1">
                            <field name="client_info" nolabel="1"/>
                            <field name="client_history_summary" nolabel="1"/>
                            <field name="client_dietary_history" readonly="1"/>
                        </group>
                        
                        <!-- Budget and Product Count -->
                        <group string="Budget and Product Configuration" col="2">
                            <group>
                                <field name="currency_id" invisible="1"/>
                                <field name="target_budget" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <group>
                                <field name="specify_product_count"/>
                                <field name="product_count" 
                                       attrs="{'invisible': [('specify_product_count', '=', False)], 
                                              'required': [('specify_product_count', '=', True)]}"/>
                            </group>
                        </group>
                        
                        <!-- Composition Type -->
                        <group string="Composition Settings" col="2">
                            <group>
                                <field name="engine_type"/>
                                <field name="composition_type" invisible="1"/>
                                <field name="composition_display_type" readonly="1"/>
                            </group>
                            <group>
                                <field name="experience_category_filter" 
                                       attrs="{'invisible': [('engine_type', '!=', 'experience')]}"/>
                                <field name="selected_experience" 
                                       domain="[('is_experience', '=', True)]"
                                       attrs="{'invisible': [('engine_type', '!=', 'experience')]}"/>
                            </group>
                        </group>
                        
                        <!-- Experience Preview -->
                        <group attrs="{'invisible': [('selected_experience', '=', False)]}" col="1">
                            <field name="experience_preview" nolabel="1"/>
                        </group>
                        
                        <!-- Dietary Restrictions -->
                        <group string="Dietary Restrictions" col="2">
                            <group>
                                <field name="dietary_restrictions"/>
                                <field name="dietary_restrictions_text" 
                                       placeholder="Enter additional restrictions separated by commas"
                                       attrs="{'invisible': [('dietary_restrictions', 'not in', ['multiple', 'none'])]}"/>
                            </group>
                            <group attrs="{'invisible': [('dietary_restrictions', '!=', 'multiple')]}">
                                <field name="is_halal"/>
                                <field name="is_vegan"/>
                                <field name="is_vegetarian"/>
                                <field name="is_gluten_free"/>
                                <field name="is_non_alcoholic"/>
                            </group>
                        </group>
                        
                        <!-- Client Notes -->
                        <group string="Special Instructions">
                            <field name="client_notes" widget="text" nolabel="1" 
                                   placeholder="Add any special requirements, preferences, or notes here..."/>
                        </group>
                        
                        <!-- Results Section (After Generation) -->
                        <separator string="Results" attrs="{'invisible': [('state', 'not in', ['done', 'error'])]}"/>
                        
                        <!-- Success Results -->
                        <group attrs="{'invisible': [('state', '!=', 'done')]}" col="1">
                            <field name="result_message" nolabel="1"/>
                            <group col="4">
                                <field name="composition_id" readonly="1"/>
                                <field name="total_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="product_count_actual" readonly="1"/>
                                <field name="confidence_score" widget="percentage" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Products List -->
                        <group attrs="{'invisible': [('recommended_products', '=', [])]}" string="Products in Composition" col="1">
                            <field name="recommended_products" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="categ_id"/>
                                    <field name="list_price" widget="monetary"/>
                                </tree>
                            </field>
                        </group>
                        
                        <!-- Error Display -->
                        <group attrs="{'invisible': [('state', '!=', 'error')]}" string="Error" col="1">
                            <field name="error_message" nolabel="1" readonly="1" widget="text"/>
                        </group>
                    </group>
                    
                    <!-- Hidden fields -->
                    <field name="recommender_id" invisible="1"/>
                </sheet>
                
                <footer>
                    <!-- Generate button (main action) -->
                    <button name="action_generate_recommendation" 
                            type="object" 
                            string="Generate Recommendation" 
                            class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'done')]}"/>
                    
                    <!-- After generation actions -->
                    <button name="action_view_composition" 
                            type="object" 
                            string="Open Composition" 
                            class="btn-success"
                            attrs="{'invisible': [('composition_id', '=', False)]}"/>
                    
                    <button name="action_generate_another" 
                            type="object" 
                            string="Generate Another" 
                            class="btn-info"
                            attrs="{'invisible': [('state', '!=', 'done')]}"/>
                    
                    <!-- Test Connection -->
                    <button name="action_test_connection" 
                            type="object" 
                            string="Test Connection" 
                            class="btn-secondary"/>
                    
                    <!-- Cancel -->
                    <button string="Cancel" 
                            class="btn-default" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Action to open wizard -->
    <record id="action_ollama_recommendation_wizard" model="ir.actions.act_window">
        <field name="name">Gift Recommendation Wizard</field>
        <field name="res_model">ollama.recommendation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_ollama_recommendation_wizard_form"/>
    </record>
    
    <!-- Menu item -->
    <menuitem id="menu_ollama_recommendation_wizard" 
              name="Gift Wizard" 
              parent="gift_manager.menu_gift_root"
              action="action_ollama_recommendation_wizard" 
              sequence="1"/>
</odoo>
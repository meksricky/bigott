<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rebuild_history_wizard_form" model="ir.ui.view">
        <field name="name">rebuild.history.wizard.form</field>
        <field name="model">rebuild.history.wizard</field>
        <field name="arch" type="xml">
            <form string="Rebuild Client History">
                <group>
                    <field name="partner_ids" widget="many2many_tags"/>
                    <field name="start_year"/>
                    <field name="end_year"/>
                </group>
                <footer>
                    <button name="action_rebuild" type="object" string="Rebuild" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_rebuild_history_wizard" model="ir.actions.act_window">
        <field name="name">Rebuild Client History</field>
        <field name="res_model">rebuild.history.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
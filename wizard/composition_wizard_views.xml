<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Composition Wizard Form View -->
    <record id="view_composition_wizard_form" model="ir.ui.view">
        <field name="name">composition.wizard.form</field>
        <field name="model">composition.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Gift Composition">
                <sheet>
                    <div class="oe_title">
                        <h1>AI-Powered Gift Composition Generator</h1>
                    </div>
                    
                    <group>
                        <group string="Client Information">
                            <field name="partner_id" required="1" 
                                   options="{'no_create': True, 'no_open': False}"/>
                            <field name="partner_dietary_restrictions" 
                                   attrs="{'invisible': [('partner_id', '=', False)]}"/>
                        </group>
                        <group string="Composition Parameters">
                            <field name="target_year"/>
                            <field name="target_budget" widget="monetary"/>
                            <field name="dietary_restrictions"/>
                        </group>
                    </group>
                    
                    <group string="Advanced Options">
                        <group>
                            <field name="force_engine"/>
                        </group>
                        <group>
                            <field name="additional_notes" 
                                   placeholder="Special requirements, preferences, occasion details..."/>
                        </group>
                    </group>
                    
                    <!-- Client Intelligence Display -->
                    <group string="Client Intelligence" attrs="{'invisible': [('partner_id', '=', False)]}">
                        <field name="client_info" widget="html" nolabel="1"/>
                    </group>
                    
                    <!-- Engine Status Display -->
                    <group string="Engine Status">
                        <field name="engine_status" widget="html" nolabel="1"/>
                    </group>
                    
                    <!-- Risk Assessment -->
                    <group string="Risk Assessment" attrs="{'invisible': [('partner_id', '=', False)]}">
                        <group>
                            <field name="risk_level" readonly="1"/>
                            <field name="budget_recommendation" readonly="1"/>
                            <field name="expected_products" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                
                <footer>
                    <button string="Generate Composition" 
                            name="action_generate_composition" 
                            type="object" 
                            class="btn-primary"
                            confirm="Generate AI-powered gift composition for this client?"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Main Action -->
    <record id="action_composition_wizard" model="ir.actions.act_window">
        <field name="name">Generate Gift Composition</field>
        <field name="res_model">composition.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_composition_wizard_form"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Generate AI-Powered Gift Compositions
            </p>
            <p>
                This wizard uses advanced AI/ML to create personalized gift compositions
                based on client history, preferences, and budget.
            </p>
        </field>
    </record>

    <!-- Action from Partner Form -->
    <record id="action_composition_wizard_from_partner" model="ir.actions.act_window">
        <field name="name">Generate Gift Composition</field>
        <field name="res_model">composition.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_composition_wizard_form"/>
        <field name="context">{'default_partner_id': active_id}</field>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_view_types">form</field>
    </record>

    <!-- Server Action for Quick Access -->
    <record id="action_server_open_composition_wizard" model="ir.actions.server">
        <field name="name">Generate Gift Composition</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_view_types">form,list</field>
        <field name="state">code</field>
        <field name="code">
action = {
    'type': 'ir.actions.act_window',
    'name': 'Generate Gift Composition',
    'res_model': 'composition.wizard',
    'view_mode': 'form',
    'target': 'new',
    'context': {
        'default_partner_id': record.id if record else False,
    }
}
        </field>
    </record>

    <!-- Main Menu Items -->
    <menuitem id="menu_gift_compositions_root"
              name="Gift Compositions"
              web_icon="senor_bigott_recommender,static/description/icon.png"
              sequence="10"/>
    
    <menuitem id="menu_gift_compositions_operations"
              name="Operations"
              parent="menu_gift_compositions_root"
              sequence="1"/>
    
    <menuitem id="menu_generate_composition"
              name="Generate Composition"
              parent="menu_gift_compositions_operations"
              action="action_composition_wizard"
              sequence="1"/>
    
    <menuitem id="menu_view_compositions"
              name="View Compositions"
              parent="menu_gift_compositions_operations"
              action="action_view_gift_compositions"
              sequence="2"/>
    
    <!-- Quick Access Menu under Sales -->
    <menuitem id="menu_composition_wizard_sales"
              name="Generate Gift"
              parent="sale.sale_menu_root"
              action="action_composition_wizard"
              sequence="100"/>

    <!-- Gift Compositions List/Tree View -->
    <record id="view_gift_composition_tree" model="ir.ui.view">
        <field name="name">gift.composition.tree</field>
        <field name="model">gift.composition</field>
        <field name="arch" type="xml">
            <tree string="Gift Compositions">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="target_year"/>
                <field name="target_budget" widget="monetary"/>
                <field name="actual_cost" widget="monetary"/>
                <field name="state"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- Gift Compositions Form View -->
    <record id="view_gift_composition_form" model="ir.ui.view">
        <field name="name">gift.composition.form</field>
        <field name="model">gift.composition</field>
        <field name="arch" type="xml">
            <form string="Gift Composition">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved,delivered"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" readonly="1"/>
                            <field name="target_year" readonly="1"/>
                            <field name="box_type" readonly="1"/>
                        </group>
                        <group>
                            <field name="target_budget" widget="monetary" readonly="1"/>
                            <field name="actual_cost" widget="monetary" readonly="1"/>
                            <field name="margin_percentage" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="product_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="default_code"/>
                                    <field name="list_price"/>
                                    <field name="lebiggot_category"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to View All Compositions -->
    <record id="action_view_gift_compositions" model="ir.actions.act_window">
        <field name="name">Gift Compositions</field>
        <field name="res_model">gift.composition</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No gift compositions yet
            </p>
            <p>
                Click "Generate Composition" to create your first AI-powered gift composition.
            </p>
        </field>
    </record>

</odoo>